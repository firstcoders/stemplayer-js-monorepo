{
  "name": "@firstcoders/stemplayer-js-monorepo",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-lerna-scopes": "^19.8.1",
    "husky": "^9.1.7",
    "lerna": "^8.2.4"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "elements/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "build:docs": "lerna run build:docs --stream && make collect-docs",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream --concurrency 1",
    "postpublish": "echo \"postpublish...nothing do do\"",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "postinstall": "npx playwright install && husky",
    "sam:publish": "lerna run sam:publish --stream",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.1.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "scope-empty": [
        1,
        "never"
      ]
    }
  },
  "packageManager": "yarn@4.10.3"
}
